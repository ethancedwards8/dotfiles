# reload the configuration file
bindsym $mod+Escape reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+$alt+r restart
# screen locker
bindsym $mod+$alt+space exec --no-startup-id swaylock
# exit i3 (logs you out of your X session)
bindsym $mod+$alt+q exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit Sway? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

